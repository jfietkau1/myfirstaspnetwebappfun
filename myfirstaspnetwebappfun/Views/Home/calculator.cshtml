@{
}
@{
    ViewData["Title"] = "Calculator";
}

<h1>Calculator</h1>
<p>This page will calculate how much it would cost for me to teach you about this hobby. <br> Enter the number of hours in the text box</p>
<form id="calculatorForm">
    <label for="numberInput">Enter a number:</label>
    <input type="number" id="numberInput" name="numberInput" />
    <button type="submit">Calculate</button>
</form>
<br>
<input type="text" id="rate" readonly value="30"/>
<br>
<br>
<input type="text" id="result" readonly />

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#calculatorForm').submit(function (event) {
                event.preventDefault();

                var numberInput = parseFloat($('#numberInput').val());
                var product = numberInput * $('#rate').val();
                if (!isNaN(numberInput)){
                    if(numberInput > 0){
                        $('#result').val("That would cost: " + product);
                    }
                    else{
                        $('#result').val("Please enter a positive number")
                    }
                }
                else{
                    $('#result').val("Please enter a number")
                }
                
            });
        });
    </script>
}
